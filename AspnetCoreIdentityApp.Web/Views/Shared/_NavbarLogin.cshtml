
@{
    ViewData["Title"] = "_NavbarLogin";
}




<ul class="navbar-nav me-0">
    @if (User.Identity!.IsAuthenticated)//runtime da ? ! vs. hiçbir önemi yok compiler için sadece
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-route-returnurl="/Home/Index" asp-controller="Member" asp-action="Logout">Çıkış yap</a></li>

            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark mx-1" asp-area="" asp-controller="Home" asp-action="SignUp">Kayıt Ol</a>
        </li>
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignIn">Giriş Yap</a>
        </li> 
    }
</ul>       